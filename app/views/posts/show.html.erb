<p id="notice"><%= notice %></p>

<h3>Title:</h3>
<%= @post.name %>
<h3>Content:</h3>
<%= @post.content %>
<h3>Tags:</h3>
<ul>
  <% @post.tags.each do |tag| %>
  <li><%= tag.name %></li>
  <% end %>
</ul>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<%= @post.comments.each do |comment| %>
  <p>
    <%= comment.content%>
  </p>
<%end%>

<h4>Add Comment:</h4>
<%= form_for [@post, @comment] do |f|%>
  <%= f.label :content%>
  <%= f.text_area :content%>
  <%= hidden_field_tag "comment[post_id]", @post.id %>
  <%= f.submit%>
<%end%>
